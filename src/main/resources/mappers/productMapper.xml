<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.video.model.dao.ProductDao">
	
	<!-- 분류별 상품 조회 -->
	<select id="getCategoryProduct" resultType="Product" parameterType="int">
		SELECT p.*
		FROM Product p
		JOIN ProductCategory pc ON p.categoryId = pc.categoryId
		WHERE (pc.parentCategoryId = #{id} OR pc.categoryId = #{id});
	</select>
	
	<!-- 상품 하나 조회 -->
	<select id="getProductOne" parameterType="int">
		SELECT *
		FROM Product
		WHERE productId = #{productId};
	</select>
	
	<!-- 인기 상품 조회 -->
	<select id="getBestProduct" resultType="Product">
		SELECT productId, productName, price, productImg, regDate, orderCnt
		FROM Product
		ORDER BY orderCnt DESC
		LIMIT 10;
	</select>
	
	<!-- 최근 상품 조회 -->
	<select id="getLatelyProduct" resultType="Product">
		SELECT productId, productName, price, productImg, regDate, orderCnt
		FROM Product
		ORDER BY regDate DESC
		LIMIT 10;
	</select>
	
	<!-- 장바구니에 상품 등록 -->
	<insert id="writeBasket" parameterType="ProductShoppingBasket">
	INSERT INTO ProductShoppingBasket
	VALUES
	(0, #{userId}, #{productId}, #{productSize}, #{productOption}, #{productCnt}, #{productDetail});
	</insert>
	
	<!-- 찜 상품 등록 -->
	<insert id="writeHeart" parameterType="ProductHeart">
	INSERT INTO ProductHeart
	VALUES
	(0, #{userId}, #{productId});
	</insert>
	
</mapper>